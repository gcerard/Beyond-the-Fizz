    <script>
        document.addEventListener('DOMContentLoaded', () => {

            const energeticPlayful = {
                red: '#FF6B6B',
                yellow: '#FFD166',
                green: '#06D6A0',
                blue: '#118AB2',
                darkBlue: '#073B4C',
                lightGray: '#F0F2F5'
            };

            function wrapLabel(str, maxLen) {
                if (str.length <= maxLen) {
                    return str;
                }
                const words = str.split(' ');
                let lines = [];
                let currentLine = '';
                for (const word of words) {
                    if ((currentLine + word).length > maxLen) {
                        lines.push(currentLine.trim());
                        currentLine = '';
                    }
                    currentLine += word + ' ';
                }
                lines.push(currentLine.trim());
                return lines;
            }

            const commonTooltipConfig = {
                plugins: {
                    tooltip: {
                        callbacks: {
                            title: function(tooltipItems) {
                                const item = tooltipItems[0];
                                let label = item.chart.data.labels[item.dataIndex];
                                if (Array.isArray(label)) {
                                  return label.join(' ');
                                } else {
                                  return label;
                                }
                            }
                        }
                    }
                }
            };
            
            const phCtx = document.getElementById('phChart');
            if(phCtx) {
                new Chart(phCtx, {
                    type: 'bar',
                    data: {
                        labels: ['Stomach Acid', 'Coca-Cola', 'Orange Juice', 'Black Coffee', 'Pure Water', 'Blood'],
                        datasets: [{
                            label: 'pH Level (Lower is more acidic)',
                            data: [1.5, 2.5, 3.7, 5.0, 7.0, 7.4],
                            backgroundColor: [
                                energeticPlayful.red,
                                energeticPlayful.yellow,
                                energeticPlayful.yellow,
                                energeticPlayful.green,
                                energeticPlayful.blue,
                                energeticPlayful.darkBlue
                            ],
                            borderColor: 'rgba(255, 255, 255, 0)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        indexAxis: 'y',
                        responsive: true,
                        maintainAspectRatio: false,
                         ...commonTooltipConfig,
                        scales: {
                            x: {
                                beginAtZero: true,
                                grid: {
                                    color: 'rgba(0,0,0,0.05)'
                                }
                            },
                            y: {
                                grid: {
                                    display: false
                                }
                            }
                        },
                        plugins: {
                            ...commonTooltipConfig.plugins,
                            legend: {
                                display: false
                            }
                        }
                    }
                });
            }

            const sugarCtx = document.getElementById('sugarIntakeChart');
            if(sugarCtx) {
                new Chart(sugarCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Sugar in one 12oz Cola', 'Remaining Daily Allowance', 'Exceeded Amount'],
                        datasets: [{
                            data: [25, 0, 14],
                            backgroundColor: [
                                energeticPlayful.blue,
                                energeticPlayful.lightGray,
                                energeticPlayful.red,
                            ],
                            hoverOffset: 4,
                            borderColor: '#FFFFFF',
                            borderWidth: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        cutout: '70%',
                        plugins: {
                            ...commonTooltipConfig.plugins,
                            legend: {
                                position: 'bottom',
                            },
                            tooltip: {
                                ...commonTooltipConfig.plugins.tooltip,
                                callbacks: {
                                    ...commonTooltipConfig.plugins.tooltip.callbacks,
                                    label: function(context) {
                                        let label = context.label || '';
                                        if (label) {
                                            label += ': ';
                                        }
                                        if (context.parsed !== null) {
                                            if (label.includes("Exceeded")) {
                                                return `Exceeded by ${context.raw}g`;
                                            }
                                             if (label.includes("Remaining")) {
                                                return `WHO Recommended Limit: 25g`;
                                            }
                                            label += `${context.raw}g`;
                                        }
                                        return label;
                                    }
                                }
                            }
                        }
                    }
                });
            }

             const caffeineCtx = document.getElementById('caffeineChart');
            if(caffeineCtx) {
                new Chart(caffeineCtx, {
                    type: 'bar',
                    data: {
                        labels: ['12oz Coca-Cola', '12oz Diet Coke', '8oz Brewed Coffee', '8oz Black Tea'],
                        datasets: [{
                            label: 'Caffeine (mg)',
                            data: [34, 46, 95, 47],
                            backgroundColor: [
                                energeticPlayful.red,
                                energeticPlayful.blue,
                                energeticPlayful.darkBlue,
                                energeticPlayful.yellow
                            ],
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        ...commonTooltipConfig,
                        scales: {
                            y: {
                                beginAtZero: true,
                                title: {
                                    display: true,
                                    text: 'Caffeine in mg'
                                }
                            }
                        },
                        plugins: {
                            ...commonTooltipConfig.plugins,
                            legend: {
                                display: false
                            }
                        }
                    }
                });
            }
        });
    </script>
